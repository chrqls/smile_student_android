<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:background="@drawable/mainback_old"

>

<ImageView
android:id="@+id/smile_logo"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_alignParentTop="true" 
android:layout_alignParentLeft="true"
android:layout_alignParentRight="true"
android:layout_marginTop="50dp"
android:layout_marginLeft="50dp"
android:layout_marginRight="50dp"
android:src="@drawable/smile_logo"
>
</ImageView>    
    
<EditText 
android:id="@+id/usernametext02"
android:layout_width="240dp" 
android:layout_height="50dp"
android:hint="Username"
android:singleLine="true"
android:inputType="textAutoCorrect|textCapSentences"
android:layout_centerHorizontal="true"
android:layout_below="@+id/smile_logo"    
android:layout_marginTop="30dp"
>
</EditText>

<EditText 
android:id="@+id/passwordtext02"
android:layout_width="240dp" 
android:layout_height="50dp" 
android:hint="Name (optional)" 
android:singleLine="true"
android:inputType="textAutoCorrect|textCapSentences"
android:layout_centerHorizontal="true"
android:layout_below = "@+id/usernametext02"
android:layout_marginTop="20dp"
>
</EditText>

<EditText 
android:id="@+id/uri"
android:layout_width="240dp" 
android:layout_height="50dp" 
android:text="192.168.2.4" 
android:singleLine="true"
android:layout_centerHorizontal="true"
android:layout_below = "@+id/passwordtext02"
android:layout_marginTop="20dp"
>
</EditText>

<Button
android:id = "@+id/cancelb"
android:layout_width="wrap_content"
android:layout_height="50dp"
android:text = "RESET"
android:layout_centerHorizontal="true"
android:layout_below = "@+id/uri"
android:layout_marginTop="20dp"
>
</Button>

<Button
android:id = "@+id/okb"
android:layout_width="wrap_content"
android:layout_height="50dp"
android:text = "LOGIN"
android:layout_centerHorizontal="true"
android:layout_toRightOf="@+id/cancelb"
android:layout_marginLeft="20dp"
android:layout_below = "@+id/uri"
android:layout_marginTop="20dp"
>
</Button>

<TextView
android:id = "@+id/version"
android:layout_width="wrap_content"
android:layout_height="50dp"
android:text = "Verison 2.0.2"
android:layout_centerHorizontal="true"
android:layout_below = "@+id/cancelb"
android:layout_marginTop="20dp"
>
</TextView>

</RelativeLayout>
